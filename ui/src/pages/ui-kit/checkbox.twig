<section class="ui-kit__section _checkbox-component">
	<div class="container _tabs-container">
		<div class="ui-kit__wrapper">
			<h2 class="ui-kit__title"> Checkbox </h2>
			<ul class="ui-kit__tabs-menu">
				<li class="ui-kit__tabs-item _tab active" onclick="o2.gTabs.open(this, 1.2)">
					<a href="javascript:void(0);">Visual</a>
				</li>
				<li class="ui-kit__tabs-item _tab" onclick="o2.gTabs.open(this, 1.3)">
					<a href="javascript:void(0);">Show code</a>
				</li>
			</ul>
		</div>

		<div class="ui-kit__tabs-content open" data-tab="1.2">
			{% include "/blocks/g-checkbox/g-checkbox.twig" with { "name": "check", "labelText":"Checkbox" } %}
		</div>
		<div class="ui-kit__tabs-content" data-tab="1.3">
			<pre class="prettyprint lang-html ui-kit__pretty">
&lt;label class=&quot;g-checkbox&quot;&gt;
	&lt;input type=&quot;checkbox&quot; name=&quot;{{ name }}&quot; class=&quot;g-checkbox__input&quot;&gt;
	&lt;div class=&quot;g-checkbox__body&quot;&gt;
		&lt;span class=&quot;g-checkbox__box&quot;&gt;&lt;/span&gt;
		&lt;span class=&quot;g-checkbox__text&quot;&gt;{{ labelText }}&lt;/span&gt;
	&lt;/div&gt;
&lt;/label&gt;
			</pre>
		</div>
	</div>
</section>